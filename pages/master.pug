doctype html
html(lang='pt-BR')
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    link(rel='stylesheet' href='../node_modules/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='../node_modules/@fortawesome/fontawesome-free/css/all.min.css')
    link(rel="stylesheet" href="../css/colors.css")
    link(rel="stylesheet" href="../css/effects.css")
    link(rel="stylesheet" href="../css/header.css")
    link(rel="stylesheet" href="../css/footer.css")
    link(rel="shortcut icon" href="../img/logo.png" type="image/x-icon")
    block head
body
    header
        div.d-flex.justify-content-center.logo
            a(href="./index.pug")
                img(
                src="../img/logo.png"
                width="250px"
                height="175px"
                href="./index.pug")
        div
            hr.w-75
            ul.nav.navbar-nav.d-flex.flex-row.justify-content-center
                li.mr-4
                    a(href="./index.pug") Página Inicial
                li.mr-4
                    a(href="./about.pug") Sobre nós
                li.mr-4
                    a(href="./feed.pug") Feed de Notícias
                li.mr-4
                    a(href="./report.pug") Reportar Caso
                li.mr-4
                    a(href="./statistics.pug") Estatisticas
    hr.w-75
    block content
    block foot
        footer.d-flex.container-fluid
            div.collaborators.d-flex.flex-column.w-50
                div.collaborator
                    div.imgName
                        img(src="../img/pedro.jpeg").icon
                        h5.nameCollaborator Pedro Nunes
                    div.aboutMe
                        p.descriptionCollaborator Estudante do Curso integrado de Informática para Internet.
                div.collaborator
                    div.imgName
                        img(src="../img/diego.jpeg").icon
                        h5.nameCollaborator Diego Costa
                    div.aboutMe
                        p.descriptionCollaborator Estudante do Curso integrado de Informática para Internet.
                div.collaborator
                    div.imgName
                        img(src="../img/cassiana.jpeg").icon
                        h5.nameCollaborator Cassiana Silveira
                    div.aboutMe
                        p.descriptionCollaborator Estudante do Curso integrado de Informática para Internet.
                div.collaborator
                    div.imgName
                        img(src="../img/marcio.jpg").icon
                        h5.nameCollaborator Márcio Torres
                    div.aboutMe
                        p.descriptionCollaborator Desenvolvedor de softwares desde a decada de 90 trabalha atualmente como professor no IFRS câmpus Rio Grande.
                div.collaborator
                    div.imgName
                        img(src="../img/dardo.jpeg").icon
                        h5.nameCollaborator Dardo Bornia
                    div.aboutMe
                        p.descriptionCollaborator Professor graduado em Ciências Sociais e doutor em Antropologia, atuante no IFRS câmpus Rio Grande.
            div.sugestion.w-50
                h1.text-dark.align-self-start.mb-5 Sugestões
                form(action="https://formspree.io/dbo.sociologia2018@gmail.com" method="POST")
                    div.form-group
                        label(for="Nome") Nome:
                        input.form-control#name(type="text" name="name" required placeholder="Digite seu nome")
                    div.form-group
                        label(for="Email") Email:
                        input.form-control#email(type="email" name="Email" placeholder="name@example.com" required)
                    div.form-group
                        label(for="titulo") Título:
                        input.form-control#titleForm(type="text" name="titulo" placeholder="Titulo da sugestão")
                    div.form-group
                        textarea.form-control#sugestion(placeholder="Descrição sugestiva" rows="5" name="sugestão")
                    input.btn.btn-outline-success.mb-5(type="submit" value="Enviar")
    block foot.sugestion
        footer.d-flex.column.w-100
            div.sugestion.d-flex.justify-content-center.w-100
                form(action="https://formspree.io/dbo.sociologia2018@gmail.com" method="POST").w-50
                    div.form-group
                        h1.text-dark.mb-5.mt-2 Sugestões
                        label(for="Nome") Nome:
                        input.form-control#name(type="text" name="Nome" required placeholder="Digite seu nome")
                    div.form-group
                        label(for="Email") Email:
                        input.form-control#email(type="email" name="Email" placeholder="name@example.com" required)
                    div.form-group
                        label(for="titulo") Título:
                        input.form-control#titleForm(type="text" name="Titulo" placeholder="Titulo da sugestão")
                    div.form-group
                        textarea.form-control#sugestion(placeholder="Descrição sugestiva" name="Sugestão" rows="5")
                    input.btn.btn-outline-success.mb-5(type="submit" value="Enviar")
    div.bg-dark.d-flex.justify-content-center.w-100
        p.text-white Copyright &copy;
script(src='../node_modules/jquery/dist/jquery.slim.min.js')
script(src='../node_modules/popper.js/dist/popper.min.js')
script(src='../node_modules/bootstrap/dist/js/bootstrap.min.js')
script(src='../node_modules/handlebars/dist/handlebars.min.js')
block script
